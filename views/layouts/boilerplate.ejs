<!DOCTYPE html>
<!-- This app will use bootstrap for CSS so we just need to set it up once here and then not need to worry about it in other pages -->
<!-- We can also add partials that we know we will have on every page or that we will use frequently so that we dont have to write that code again and again -->

<html lang="en" class="d-flex flex-column">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <title>YelpCamp</title>
  </head>

  <!-- navbar -->
  <%- include("../partials/navbar") %>

  <body class="d-flex flex-column min-vh-100">
    <!-- link to code using ejs-mate, this is just the way the syntax is designed -->
    <main class="container mt-5"><%- body %></main>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script>
      // Example starter JavaScript for disabling form submissions if there are invalid fields
      (() => {
        "use strict";

        // Fetch all the forms we want to apply custom Bootstrap validation styles to
        const forms = document.querySelectorAll(".validated-form");

        // Loop over them and prevent submission
        Array.from(forms).forEach((form) => {
          form.addEventListener(
            "submit",
            (event) => {
              if (!form.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
              }

              form.classList.add("was-validated");
            },
            false
          );
        });
      })();
    </script>
  </body>
  <!-- footer -->
  <%- include("../partials/footer") %>
</html>
